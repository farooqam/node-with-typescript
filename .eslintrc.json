{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "semi": "error",
        "quotes": ["error", "double", 
            {
                "allowTemplateLiterals": true
            }],
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "no-console": "off"
    }
}